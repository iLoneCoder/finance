<%- include("../layout/head")%>
    <div class="register-page">


        <div class="card">
            <%if(message) {%>
                <div class="error-container">
                    <p class="error-message">
                        <%= message%>
                    </p>
                </div>
            <%}%>
                    <div class="card-header">
                        <h1>Create your account</h1>
                    </div>

                    <form action="/auth/register" method="post" class="card-body">

                        <div class="form-group">
                            <input type="text" class="form-control" name="email" id="email" required>
                            <label class="custom-placeholder">Email</label>
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" name="username" id="username" required>
                            <label class="custom-placeholder">Username</label>
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" name="password" id="password" required>
                            <label class="custom-placeholder">password</label>
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" name="confPassword" id="confPassword" required>
                            <label class="custom-placeholder">Confirm password</label>
                        </div>

                        <div class="btn-group">
                            <button type="submit" class="btn">Register</button>
                        </div>

                        <div class="form-group">
                            <p class="suggestion">Already have an account ?</p>
                            <a href="/auth/login">log in</a>
                        </div>

                        <input type="hidden" name="_csrf" value="<%= csrfToken%>">
                    </form>
        </div>

    </div>
    <%- include("../layout/footer")%>